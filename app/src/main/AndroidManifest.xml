<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/Theme.AndroidSimple"
        tools:targetApi="31" >


        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".AnimationActivity"/>
        <activity android:name=".animation.MainAnimationActivity"/>
        <activity android:name=".lock.LockMainActivity"
            android:launchMode="singleTop"
            />
        <activity android:name=".TransparentActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <activity android:name=".LaunchModeActivity"/>
        <activity android:name=".CoroutineActivity"/>
        <activity android:name=".fragment.MainFragmentActivity"/>
        <activity android:name=".bigview.LoadMediaActivity"/>
        <activity android:name=".bigview.LongImageLoadActivity"/>
        <activity android:name=".bigview.BigImageLoadActivity"/>
    </application>

</manifest>